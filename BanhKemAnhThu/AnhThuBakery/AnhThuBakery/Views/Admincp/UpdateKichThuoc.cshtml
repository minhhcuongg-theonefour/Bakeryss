@model AnhThuBakery.Models.KichThuoc
@{
    List<AnhThuBakery.Models.LOAIBANH> loai = ViewBag.loai;
}

<div class="panel panel-primary" style="width: 300px; margin-top: 20px;">
    <div class="panel-heading">
        <h3 class="panel-title">Cập nhật kích thước</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("UpdateKichThuoc", "Admincp", FormMethod.Post))
        {
            @Html.HiddenFor(i=>i.MaKT)
            <div class="form-group">
                <label>Loại Bánh</label>
                @Html.DropDownListFor(i => i.Maloai, new SelectList(loai, "MaLoai", "TenLoaiBanh", loai.FirstOrDefault()))
            </div>
            <div class="form-group">
                <label>Kích thước</label>
                    @Html.TextBoxFor(i => i.Kichthuoc1, new { @class = "form-control", placeholder = "Tên kích thước" })
                    @Html.ValidationMessageFor(i => i.Kichthuoc1)
        
              
               
            </div>
            <button type="submit" class="btn btn-success" style="float:right">Submit</button>
        }

    </div>
</div>
