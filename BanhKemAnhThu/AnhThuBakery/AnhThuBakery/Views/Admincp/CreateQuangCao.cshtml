@model AnhThuBakery.Models.QUANGCAO
@{
    ViewBag.Title = "CreateBanh";
}

<div class="panel panel-primary" style="width:800px;margin-top:20px;">
    <div class="panel-heading">
        <h3 class="panel-title">Thêm Mới Quảng Cáo</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateQuangCao", "Admincp", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.TenCTY, new { @class = "form-control", placeholder = "Tên Công Ty" })
                @Html.ValidationMessageFor(i => i.TenCTY)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(i => i.HinhMinhHoa, new { @class = "form-control", placeholder = "Hình Minh Họa", id = "txtImages", style = "float:left;margin-right:20px;width:400px;" })
                <input class="btn btn-success" id="btnImages" type="button" value="Chọn Hình" />
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Href, new { @class = "form-control", placeholder = "Link" })
                @Html.ValidationMessageFor(i => i.Href)
            </div>
             <div class="form-group">
                @Html.TextBoxFor(m => m.NgayBatDau, new { @class = "form-control", placeholder = "Ngày bắt đầu",type="date" })
                @Html.ValidationMessageFor(i => i.NgayBatDau)
            </div>
                         <div class="form-group">
                @Html.TextBoxFor(m => m.NgayKetThuc, new { @class = "form-control", placeholder = "Ngày kết thúc", type = "date" })
                @Html.ValidationMessageFor(i => i.NgayKetThuc)
            </div>
            <div class="form-group" style="float:right;">
                <button type="reset" class="btn btn-warning">Xóa</button>
                <button type="submit" class="btn btn-success">Thêm</button>
            </div>
        }
    </div>
</div>



<script src="../../ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="../../ckfinder/ckfinder.js" type="text/javascript"></script>

