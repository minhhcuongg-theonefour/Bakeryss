@model AnhThuBakery.Models.LOAIBANH
@{
    ViewBag.title = "Sửa Loại Bánh";
}

<div class="panel panel-primary" style="width: 300px; margin-top: 20px;">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.title</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("UpdateLoai", "Admincp", FormMethod.Post))
        {

            <div class="form-group">
                <label>Tên Chủ Đề</label>
                @Html.HiddenFor(i => i.MaLoai)
                @Html.TextBoxFor(i => i.TenLoaiBanh, new { @class = "form-control", placeholder = "Tên Chủ Đề" })@Html.ValidationMessageFor(i => i.TenLoaiBanh)
            </div>
            <button type="submit" class="btn btn-success" style="float:right">Submit</button>
        }

    </div>
</div>
