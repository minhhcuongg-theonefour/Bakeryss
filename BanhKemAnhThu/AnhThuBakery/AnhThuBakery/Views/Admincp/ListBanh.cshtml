@model List<AnhThuBakery.Models.BANH>
@{
    ViewBag.Title = "Quản Lý Bánh";
}





<div class="col-lg-12">
    @{
        if (TempData["title"] != null)
        {
            @Html.Partial("PartialThongBao", TempData["title"])
        }

    }
</div>

    <div class="col-md-12" style="margin-top:20px;">
    <!-- BOX -->
        <a href="../Admincp/CreateBanh" class="btn btn-success" style="margin-bottom:10px">Thêm Mới Bánh</a>

    <div class="box-body">
        <div id="datatable2_wrapper" class="dataTables_wrapper form-inline" role="grid">
            <div class="row">
                <table id="datatable2" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover dataTable" aria-describedby="datatable2_info">
                    <thead>
                        <tr role="row">
                            <th style="max-width:50px;">Hình</th>
                            <th>Tên Bánh</th>
                            <th>Chủ Đề</th>
                            <th>Loại Bánh</th>
                            <th>Mô Tả</th>
                            <th>Đơn Giá</th>
                            <th>Đã Bán</th>
                            <th style="width:150px;">Sửa,Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {

                            {
                                <tr class="gradeA odd">
                                    <td ><img style="max-width:50px;" src="@Model[i].HinhMinhHoa" /> </td>
                                    <td>@Model[i].TenBanh</td>
                                    <td>@Model[i].CHUDE.TenChuDe</td>
                                    <td>@Model[i].LOAIBANH.TenLoaiBanh</td>
                                    <td>@Html.Raw(Model[i].MoTa)</td>
                                    <td>@String.Format("{0:0,00}", Model[i].DonGia)</td>
                                    <td>@Model[i].SoLuongBan</td>
                                    <td>
                                        <div class="btn-group dropdown" style="margin-bottom:5px">
                                            <button class="btn btn-primary">Sửa, Xóa</button>
                                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a href="../Admincp/UpdateBanh?id=@Model[i].MaBanh">Sửa</a>
                                                </li>
                                                <li>
                                                    <a href="../Admincp/DeleteBanh?id=@Model[i].MaBanh">Xóa</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }

                        }


                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- /BOX -->
</div>













