@model List<AnhThuBakery.Models.KHACHHANG>
@{
    ViewBag.Title = "ListKhachHang";
}

<div class="col-lg-12">
    @{
        if (TempData["title"] != null)
        {
            @Html.Partial("PartialThongBao", TempData["title"])
        }

    }
</div>
<div class="table-responsive" style="margin-top:20px;">
    <a href="../Admincp/CreateKhachHang" style="margin-bottom:10px;" type="button" class="btn btn-primary">Thêm Mới Khách Hàng</a>
    <table id="datatable2" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover dataTable" aria-describedby="datatable2_info">
        <thead>
            <tr>
                <th class="header">Họ tên</th>
                <th class="header">Email</th>
                <th class="header">Địa Chỉ</th>
                <th class="header">Điện Thoại</th>
                <th class="header">Ngày Sinh</th>
                <th class="header">Giới Tính</th>
                <th class="header">Tên Đăng Nhập</th>
                <th class="header">Sửa,Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>

                    <td>@i.HoTenKH</td>
                    <td>@i.Email</td>
                    <td>@i.DiaChi</td>
                    <td>@i.DienThoaiKH</td>
                    <td>@i.NgaySinh</td>
                    <td>
                        @if (i.GioiTinh == true)
                        {
                            <p>Nam</p>
                        }
                        else
                        {
                            <p>Nữ</p>
                        }

                    </td>
                    <td>@i.TenDN</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info">Sửa,Xóa</button>
                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="../Admincp/UpdateKhachHang?id=@i.MaKH">Sửa</a></li>
                                <li><a href="../Admincp/DeleteKhachHang?id=@i.MaKH">Xóa</a></li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
