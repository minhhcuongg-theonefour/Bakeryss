@model List<AnhThuBakery.Models.LIENHE>
@{
    ViewBag.Title = "Quản Lý Liên Hệ";
}


<div class="col-lg-12">
    @{
        if (TempData["title"] != null)
        {
            @Html.Partial("PartialThongBao", TempData["title"])
        }

    }
</div>
<div class="table-responsive" style="margin-top:20px;">
    <table id="datatable2" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover dataTable" aria-describedby="datatable2_info">
        <thead>
            <tr>
                <th class="header">Họ Tên <i class="fa fa-sort"></i></th>
                <th class="header">Địa Chỉ <i class="fa fa-sort"></i></th>
                <th class="header">Email <i class="fa fa-sort"></i></th>
                <th class="header">Điện Thoại <i class="fa fa-sort"></i></th>
                <th class="header">Nội Dung<i class="fa fa-sort"></i></th>
                <th class="header">Xóa<i class="fa fa-sort"></i></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.HoTen</td>
                    <td>@i.Diachi</td>
                    <td>@i.Email</td>
                    <td>@i.DienThoai</td>
                    <td>@i.NoiDung</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info">Xóa</button>
                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="../Admincp/DeleteLienHe?Id=@i.MaLienHe">Xóa</a></li>
                            </ul>
                        </div>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>




