@model List<AnhThuBakery.Models.DONDH>
@{
    ViewBag.Title = "ListHoaDon";
}
@foreach (var i in Model)
{
     <div class="box border blue" style="margin-top:20px;">
    <div class="box-title">
        <h4><i class="fa fa-table"></i>@i.KHACHHANG.HoTenKH ,Ngày đặt: @i.NgayDH , 
        @if (i.DaGiao == true)
        {
          <span>Đã Giao , @i.NgayGiaoHang</span>
        }
        else
        {
            <span>Chưa Giao</span>
        }
        </h4>
        <div class="tools">
           
            <a href="javascript:;" class="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a href="javascript:;" class="remove">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
         <div class="box-body" style="display: none;">
             <table class="table table-striped">
                 <thead>
                     <tr>
                         <th>Bánh</th>
                         <th>Số lượng</th>
                         <th>Đơn giá</th>
                         <th>Thành tiền</th>
                     </tr>
                 </thead>
                 <tbody>
                     @foreach (var j in i.CTDHs)
                     {
                         <tr>
                             <td>@j.BANH.TenBanh</td>
                             <td>@j.SoLuong</td>
                             <td>@j.DonGia</td>
                             <td>@j.ThanhTien</td>
                         </tr>
                     }
                     <tr>
                         <td></td>
                         <td></td>
                         <td></td>
                         <td style="color:red;text-align:right;" colspan="5">
                             <p>Hình Thức Thanh Toán: @i.HTTT.TenHTTT</p>
                             <p>Tổng Tiền : @String.Format("{0:0,0}", i.TriGia) VND</p>
                             <p>
                                 @using (Html.BeginForm("ActiveGiaoHang", "Admincp"))
                                 {
                                     <input type="hidden" name="idHD" value="@i.MaDH"/>
                                     if (i.DaGiao == true)
                                     {
                                         <button type="submit" class="btn btn-primary">Đã Giao</button>
                                     }
                                     else
                                     {
                                         <button type="submit" class="btn btn-primary">Chưa Giao</button>
                                     }
                                 }
                                

                             </p>
                         </td>
                     </tr>
                 </tbody>
             </table>

         </div>
</div>
}

